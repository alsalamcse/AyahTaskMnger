<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DAAFAF">

            <TextView
                android:id="@+id/itmTvtittle"
                android:layout_width="226dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="61dp"
                android:layout_marginEnd="113dp"
                android:layout_marginRight="113dp"
                android:text="TextView"
                android:textAllCaps="false"
                android:textColor="#51738F"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />

            <TextView
                android:id="@+id/itmTvsupject"
                android:layout_width="223dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="75dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="138dp"
                android:text="TextView"
                android:textAllCaps="false"
                android:textColor="#517391"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />

            <CheckBox
                android:id="@+id/itmChbxlsCompleted"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="214dp"
                android:text="IsCompleted"
                android:textColor="#5D7B94"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/itmRatingPrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="203dp"
                android:layout_marginEnd="-4dp"
                android:layout_marginRight="-4dp" />

            <ImageView
                android:id="@+id/itmImageInfo"
                android:layout_width="42dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="364dp"
                android:layout_marginRight="364dp"
                app:srcCompat="@android:drawable/ic_dialog_info" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>